<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_feed_top" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:padding="13dp"
            android:src="@drawable/ufi_more" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comment_id"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <com.daasuu.camerarecorder.ui.view.VideoView
            android:id="@+id/vvInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ghjf1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|left"
            android:padding="10dp"
            android:src="@drawable/volumeon" />

        <ImageView
            android:id="@+id/icon_playing"
            android:layout_width="107dp"
            android:layout_height="130dp"
            android:layout_gravity="center|center_vertical"
            android:padding="10dp"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/btn_playing"
            android:layout_width="340dp"
            android:layout_height="186dp"
            android:layout_gravity="center|center_vertical"
            android:background="#00FFFFFF"
            android:padding="10dp" />
        <Button
            android:id="@+id/btn_volume"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|left"
            android:background="#00FFFFFF"
            android:padding="10dp"/>

        <com.daasuu.camerarecorder.ui.view.CameraAnimation
            android:id="@+id/ivCameraAnimation"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|right"
            android:padding="10dp" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp">

        <Button
            android:id="@+id/btn_liked"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="9dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ufi_heart" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="9dp"
            android:src="@drawable/ufi_heart"
            android:translationX="140dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="9dp"
                android:src="@drawable/ufi_heart"
                android:background="#00FFFFFF"/>

            <TextView
                android:id="@+id/txttxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Like"
                android:textColor="#000"
                android:textSize="12dp" />

            <Space
                android:id="@+id/space1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:padding="9dp"
                android:src="@drawable/ufi_comment" />

            <TextView
                android:id="@+id/txttxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment"
                android:textColor="#000"
                android:textSize="12dp" />

            <Space
                android:id="@+id/space"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:padding="9dp"
                android:src="@drawable/ufi_new_share" />

            <TextView
                android:id="@+id/txttxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"
                android:textColor="#000"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
