<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="240dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/updator" />
        <TextView
            android:id="@+id/t"
            android:layout_width="275dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:text="New Update is available with features worth Exploring."
            android:textColor="@color/background_progress_color"
            android:textSize="16sp"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/a11"
            android:layout_width="236dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/moress"
            android:backgroundTint="@color/yellow_A700"
            android:orientation="horizontal"
            android:paddingLeft="17dp"
            android:paddingRight="17dp">

            <TextView
                android:id="@+id/t11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/a22"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="33dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">

        <TextView
            android:id="@+id/t22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="later"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>