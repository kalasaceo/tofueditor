<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_background"
    tools:context="com.daasuu.camerarecorder.ProfileCropper">

    <Button
        android:id="@+id/image_button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/group_info_popup_norm"
        android:backgroundTint="#9CCC65"
        android:text="select"
        android:translationX="10dp"
        android:translationY="10dp" />

    <FrameLayout
        android:id="@+id/top_frame"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <com.fenchtose.nocropper.CropperView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="487dp"
            android:background="#ff282828"
            app:nocropper__grid_color="@color/white"
            app:nocropper__grid_opacity="0.9"
            app:nocropper__grid_thickness="0.8dp"
            app:nocropper__padding_color="@color/white" />

        <ImageView
            android:id="@+id/snap_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|bottom"
            android:layout_margin="16dp"
            android:background="@android:drawable/ic_menu_zoom"
            android:padding="8dp"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/rotate_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="16dp"
            android:background="@drawable/ufi_new_share"
            android:padding="8dp"
            android:scaleType="center" />

    </FrameLayout>

    <GridLayout
        android:id="@+id/bottom_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3">

        <Button
            android:id="@+id/crop_button"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="@drawable/group_info_popup_norm"
            android:backgroundTint="#9CCC65"
            android:text="set" />

    </GridLayout>

    <CheckBox
        android:id="@+id/original_checkbox"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="99dp"
        android:checked="true"
        android:text="select original" />


</RelativeLayout>
