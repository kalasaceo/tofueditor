<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.daasuu.camerarecorder.AddCommentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@color/grey_50"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:text="Your Comment Matters"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="156dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:outlineAmbientShadowColor="@android:color/black"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/cstring"
                android:layout_width="328dp"
                android:layout_height="136dp"
                android:background="#00FFFFFF"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Type your Comment"
                android:inputType="textMultiLine"
                android:translationX="10dp"
                android:translationY="10dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="35dp"
            android:outlineAmbientShadowColor="@android:color/black"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/btn_canadd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:text="Add"
                android:textColor="#fff" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Kindly do not use false language and keep your comments in formal manner.Bad langauage may lead to your Account Suspension as mentioned in our Privacy Policy."
        android:textColor="#535257"
        android:textSize="14sp" />

</LinearLayout>