<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="29dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ppic_texmenu"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ppic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:paddingBottom="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/group_info_popup_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:paddingTop="14dp"
                    android:text="Date of Birth"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t_opt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:textColor="#9E9E9E"
                        android:text="Type your birth date here"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/btn_d1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textAlignment="textStart"
                        android:textColor="#54000000"
                        android:textSize="10sp" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/group_info_popup_middle"
                android:paddingBottom="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewx"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:paddingTop="14dp"
                    android:text="Hometown"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t_opt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9E9E9E"
                        android:paddingTop="14dp"
                        android:textSize="14dp"
                        android:text="Type your Place of Birth"/>

                    <Button
                        android:id="@+id/btn_d2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textAlignment="textStart"
                        android:textColor="#54000000"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/group_info_popup_middle"
                android:paddingBottom="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewf"
                    android:layout_width="146dp"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:text="Hobby"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t_opt3"
                        android:layout_width="wrap_content"
                        android:textColor="#9E9E9E"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:textSize="14dp"
                        android:text="Describe your Hobby"/>

                    <Button
                        android:id="@+id/btn_d3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textAlignment="textStart"
                        android:textColor="#54000000"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="62dp"
                android:background="@drawable/group_info_popup_middle"
                android:paddingBottom="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewq"
                    android:layout_width="147dp"
                    android:layout_height="match_parent"
                    android:paddingTop="14dp"
                    android:text="Works at"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                    android:id="@+id/t_opt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:textColor="#9E9E9E"
                    android:paddingTop="14dp"
                    android:textSize="14dp"
                    android:text="Type your WorkPlace"/>

                    <Button
                        android:id="@+id/btn_d4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textAlignment="textStart"
                        android:textColor="#54000000"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="62dp"
                android:background="@drawable/group_info_popup_bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVie"
                    android:layout_width="147dp"
                    android:layout_height="match_parent"
                    android:paddingTop="14dp"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="61dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    app:srcCompat="@drawable/st2" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>